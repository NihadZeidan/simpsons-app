<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <%- include('./layout/head') %>
</head>

<body>

    <header>
        <%- include('./layout/header') %>
    </header>


    <main>

        <% if (data.length ===0) {%>

            <h2> No Data SAVED!</h2>

            <%  } else { %>

                <% data.forEach(data => { %>
                    <div class="home">

                        <h3>
                            <%= data.character %>
                        </h3>

                        <img src="<%= data.image %>"> </image>

                        <h4> Quote :
                            <%= data.quote%>
                        </h4>

                        <a href="/favorite-quotes/<%= data.id %>">VIEW DETAILS</a>

                    </div>
                    <% }) %>
                        <% } %>


    </main>


</body>

</html>