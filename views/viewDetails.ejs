<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <%- include('./layout/head') %>
</head>

<body>
    <header>
        <%- include('./layout/header') %>
    </header>

    <main>


        <% data.forEach(data => { %>
            <div class="home">

                <h3>
                    <%= data.character %>
                </h3>

                <img src="<%= data.image %>"> </image>
                <h4> Quote :
                    <%= data.quote%>
                </h4>

                <form action="/update/<%= data.id %>?_method=PUT" method="POST">

                    <input type="text" name="quote" value="<%= data.quote %>">
                    <input type="submit" value="Update">

                </form>

                <form action="/delete/<%= data.id %>?_method=DELETE" method="POST">
                    <input type="hidden" name="quote" value="<%= data.quote%>">
                    <input type="submit" value="DELETE Quote">
                </form>

                <% }) %>

    </main>

</body>

</html>